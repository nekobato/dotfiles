[user]
	name = nekobato
	email = nekobato@gmail.com
[core]
	excludesfile = ~/.gitignore
	autocrlf = false
[core]
	editor = vim
#	pager = lv -c
[color]
	ui = auto
[alias]
	b = branch
	c = checkout
	st = status
	sh = show
	sb = show-branch
	cm = commit
	cmv = commit -v
	cma = commit -a -v
	co = checkout
	cl = clone
	dc = diff --cached
	d = diff -C
	ds = diff -C --stat
	lg = log --graph --all --color --oneline
	l = log
  today = log --reverse --no-merges --branches=* --date=local --since=midnight --pretty=format:"%s"
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
[push]
	default = simple
[github]
	user = nekobato
	email = nekobato@gmail.com
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[ghi]
	token = !security find-internet-password -a nekobato -s github.com -l 'ghi token' -w
[url "git@github.com:"]
	pushinsteadof = https://github.com/
